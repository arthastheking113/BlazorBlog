@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
@using BlazorServer.Model
@using Microsoft.AspNetCore.Identity
@inject UserManager<CustomUser> UserManager
@using BlazorServer.Data
@inject ApplicationDbContext _context 
@{ 
    var category = _context.BlogCategory.ToList();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lan's Blog</title>

    <base href="~/" />

    <link href="css/site.css" rel="stylesheet" />
    <link href="BlazorServer.styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navigation-->
    <div id="preloader">
        <div class="center222">
            <p style="text-align: center;font-size: 14px; font-weight: 800; letter-spacing: 1px; text-transform: uppercase; border-radius: 0; font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;">
                Just A Second, I'm Loading...
            </p>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container-fluid">

            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul style="font-size:medium" class="navbar-nav ml-auto mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="">
                            <span class="oi oi-home" aria-hidden="true"></span> Lan's Blog
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle category-text" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="iconify" data-icon="bx:bxs-category" data-inline="true"></span> Category
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                            @foreach (var item in category)
                            {
                                <a class="dropdown-item category-text" style="background-color: #fff0; border: none; font-size: 12px; font-weight: 800; letter-spacing: 1px; text-transform: uppercase; border-radius: 0; font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;" href="/category/@item.Slug">@item.Name</a>
                            }
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/category/manage">
                            Category Manage
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/post/manage">
                            Post Manage
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" id="logout">
                        </form>
                        <li class="nav-item">
                            <a class="nav-link" href="Identity/Account/Manage">Hello, @((await UserManager.GetUserAsync(User)).FullName)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="Logout()">Log out</a>

                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="Identity/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="Identity/Account/Login">Log in</a>
                        </li>
                    }

                </ul>
            </div>

        </div>
    </nav>


    @RenderBody()


    <script src="_framework/blazor.server.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/js/summernote.js"></script>
    <script>
       
        function Logout() {
            document.getElementById('logout').submit();
        }

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
